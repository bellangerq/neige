{{!< default}}

{{navigation}}

<div class="author">

  <h1>{{@blog.title}}</h1>

  <div class="posts">

    {{#foreach posts}}

    <div class="posts-item">

      <a href="{{url}}"><h2>{{title}}</h2></a>

      {{> "info"}}

      <p>{{excerpt words="30"}}...</p>

    </div>

    {{/foreach}}

  </div>

</div>

{{pagination}}
