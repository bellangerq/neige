{{!< default}}

{{navigation}}

<div class="author">

  {{#author}}

  <h1>{{name}}</h1>

  {{#if facebook}}
    <a class="social-icon" href="{{facebook_url}}" target="_blank">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#333333" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
      </svg>
    </a>
  {{/if}}

  {{#if twitter}}
    <a class="social-icon" href="{{twitter_url}}" target="_blank">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#333333" stroke-linecap="round" stroke-linejoin="round" stroke-width="1">
        <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z" />
      </svg>
    </a>
  {{/if}}

  {{#if bio}}
    <p class="bio">{{bio}}</p>
  {{/if}}

  {{/author}}

  <div class="posts">

    {{#foreach posts}}

    <div class="posts-item">

      <a href="{{url}}"><h2>{{title}}</h2></a>

      {{> "info"}}

      <p>{{excerpt words="30"}}...</p>

    </div>

    {{/foreach}}

  </div>

</div>

{{pagination}}
